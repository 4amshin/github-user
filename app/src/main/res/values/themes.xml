<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingSubmission1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_dark</item>
        <item name="colorPrimaryVariant">@color/grey_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_github</item>
        <item name="colorSecondaryVariant">@color/grey_medium</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextFullName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextUserName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/grey_superLight</item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="TextFullName.Detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextFullName.DescriptionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextUserName.Detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextUserName.Description">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="TextIcon.Repo">
        <item name="android:textColor">@color/green_github</item>
    </style>

    <style name="TextIcon.Project">
        <item name="android:textColor">@color/purple_github</item>
    </style>

    <style name="TextIcon.Followers">
        <item name="android:textColor">@color/orange_github</item>
    </style>

    <style name="TextIcon.Location">
        <item name="android:textColor">@color/orange_medium</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="TextIcon.Company">
        <item name="android:textColor">@color/purple_medium</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

</resources>